{
  // ========== CURSOR ==========
  "cursor.composer.shouldAllowCustomModes": true,

  // ========== EDITOR SETTINGS ==========
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "Comic Code, Hack Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.indentSize": 2,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "diffEditor.ignoreTrimWhitespace": true,

  // ========== WORKBENCH/UI SETTINGS ==========
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.revealIfOpen": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.activityBar.orientation": "vertical",

  // ========== LANGUAGE FORMATTERS ==========
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svg]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ========== FILE HANDLING ==========
  "files.associations": {
    "*.jsx": "javascriptreact",
    "*.tsx": "typescriptreact"
  },
  "files.autoSave": "off",
  "files.trimTrailingWhitespace": true,
  "explorer.compactFolders": false,
  "explorer.confirmPasteNative": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "*.db": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.sqlite": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*"
  },

  // ========== SEARCH SETTINGS ==========
  "search.exclude": {
    "**/.git": true,
    "**/bower_components": true,
    "**/build": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/tmp": true
  },
  "search.useGlobalIgnoreFiles": true,

  // ========== TERMINAL SETTINGS ==========
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "Q_NEW_SESSION": "1"
  },
  "terminal.integrated.fontFamily": "Comic Code, Hack Nerd Font",
  "terminal.integrated.tabs.enabled": true,

  // ========== LANGUAGE SPECIFIC SETTINGS ==========
  // JavaScript/TypeScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Go
  "go.formatTool": "goimports",
  "go.toolsManagement.autoUpdate": true,
  "go.useLanguageServer": true,

  // Makefile
  "makefile.configureOnOpen": true,

  // ========== EXTENSION SETTINGS ==========
  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "vue-html": "html"
  },
  "emmet.syntaxProfiles": {
    "javascriptreact": "jsx",
    "typescriptreact": "jsx",
    "xml": {
      "attr_quotes": "single"
    }
  },
  "emmet.triggerExpansionOnTab": true,

  // Project manager
  "projectManager.sortList": "Recent",
  "projectManager.git.baseFolders": ["$home\\workspace"],

  // CodeSnap
  "codesnap.backgroundColor": "transparent",
  "codesnap.containerPadding": "0",
  "codesnap.showLineNumbers": false,
  "codesnap.showWindowControls": false,
  "codesnap.shutterAction": "copy",
  "codesnap.target": "window",
  "codesnap.transparentBackground": true,

  // Markdown Preview Enhanced
  "markdown-preview-enhanced.codeBlockTheme": "github.css",
  "markdown-preview-enhanced.previewTheme": "github-light.css",

  // VSCode Neovim
  "vscode-neovim.ctrlKeysForInsertMode": ["a", "c", "d", "h", "j", "m", "o", "r", "t", "u", "w", "k", "l"],
  "vscode-neovim.ctrlKeysForNormalMode": [
    "a",
    "b",
    "c",
    "d",
    "e",
    "f",
    "i",
    "m",
    "o",
    "r",
    "t",
    "u",
    "v",
    "w",
    "x",
    "s",
    "y",
    "z",
    "/",
    "]",
    "right",
    "left",
    "up",
    "down",
    "backspace",
    "delete",
    "h",
    "j",
    "k",
    "l"
  ],
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // Gitlens
  "gitlens.remotes": [
    {
      "domain": "git.parcelperform.com",
      "type": "GitLab",
      "name": "PP",
      "protocol": "https",
      "urls": {
        "repository": "https://git.parcelperform.com/${repo}",
        "branches": "https://git.parcelperform.com/${repo}/branches",
        "branch": "https://git.parcelperform.com/${repo}/commits/${branch}",
        "commit": "https://git.parcelperform.com/${repo}/commit/${id}",
        "file": "https://git.parcelperform.com/${repo}?path=${file}${line}",
        "fileInBranch": "https://git.parcelperform.com/${repo}/blob/${branch}/${file}${line}",
        "fileInCommit": "https://git.parcelperform.com/${repo}/blob/${id}/${file}${line}",
        "fileLine": "#L${line}",
        "fileRange": "#L${start}-L${end}"
      }
    }
  ],

  // Other
  "biome.enabled": false,
  "biome.suggestInstallingGlobally": false,
  "prettier.printWidth": 120,
  "redhat.telemetry.enabled": false,
  "jupyter.askForKernelRestart": false,
}
